<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scrollviewemo1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HorizontalScrollActivity"
            android:label="@string/title_activity_horizontal_scroll" >
        </activity>
        <activity
            android:name=".VerticalScrollActivity"
            android:label="@string/title_activity_vertical_scroll" >
        </activity>
        <activity
            android:name=".DynamicScrollActivity"
            android:label="@string/title_activity_dynamic_scroll" >
        </activity>
        <activity
            android:name=".DynamicHorizontalActivity"
            android:label="@string/title_activity_dynamic_horizontal" >
        </activity>
    </application>

</manifest>
