<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.radiobuttondemo.MainActivity" >

   <Button
       android:id="@+id/dynamic"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/button2"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="66dp"
       android:height="60dp"
       android:text="Dynamically Add RadioButton"
       android:width="400dp" />

   <Button
       android:id="@+id/button1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/button2"
       android:layout_alignLeft="@+id/button2"
       android:height="60dp"
       android:text="Intialize Radio Button"
       android:width="400dp" />

   <Button
       android:id="@+id/event"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/dynamic"
       android:layout_alignLeft="@+id/dynamic"
       android:height="60dp"
       android:text="Event on Radio Button"
       android:width="400dp" />

   <Button
       android:id="@+id/button2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/event"
       android:layout_centerHorizontal="true"
       android:height="60dp"
       android:text="Enable &amp; Disable Radio Button"
       android:width="400dp" />

</RelativeLayout>